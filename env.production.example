# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# IMPORTANT: Change all default values before deployment!

# ===========================================
# ADMIN AUTHENTICATION (CRITICAL SECURITY)
# ===========================================
# Generate a strong password hash using:
# node -e "console.log(require('bcryptjs').hashSync('your-strong-password', 12))"
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2a$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewdBPj4J/HS.iQeO

# Generate a strong JWT secret using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# UMAMI ANALYTICS CONFIGURATION
# ===========================================
# Update these URLs to match your domain
NEXT_PUBLIC_UMAMI_BASE_URL=https://your-domain.com/analytics
NEXT_PUBLIC_UMAMI_USERNAME=admin
NEXT_PUBLIC_UMAMI_PASSWORD=your-umami-password
NEXT_PUBLIC_UMAMI_WEBSITE_ID=1
NEXT_PUBLIC_UMAMI_API_URL=https://your-domain.com/analytics/api
NEXT_PUBLIC_UMAMI_TRACKING_SCRIPT_URL=https://your-domain.com/analytics/umami.js

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=umami
POSTGRES_USER=umami
POSTGRES_PASSWORD=your-strong-database-password

# ===========================================
# UMAMI INTERNAL CONFIGURATION
# ===========================================
# Generate strong secrets for Umami
UMAMI_HASH_SALT=your-umami-hash-salt-here
UMAMI_JWT_SECRET=your-umami-jwt-secret-here
UMAMI_APP_SECRET=your-umami-app-secret-here

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
